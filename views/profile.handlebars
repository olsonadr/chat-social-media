{{#section "head"}}
  <!-- Common html head stuff -->
  {{> common-html-head}}

  <!-- Link to static javascript -->
  <script src="/scripts/account-settings/profile.js" defer></script>
{{/section}}

{{> header }}

<main class="content">

  <div class="account-settings">
    <div class="username">{{username}}</div>
    <button type="button" id="parental-button">Parental Controls</button>
  </div>

  <div id="modal-backdrop" class="hidden modal-backdrop"></div>
    <div id="parental-controls-modal" class="hidden modal-container">
      <div class="modal-dialog">
        <div class="modal-header">
          <h3>Parental Control Settings</h3>
          <button type="button" id="modal-close" class="modal-hide-button">&times;</button>
        </div>
        <div class="modal-body">

          <div class="input-element">
            <label for="parental-password-input">Parent Password</label>
            <input type="text" id="parental-password-input">
          </div>
          <div class="input-element">
            <label for="nsfw-allow" class="container">Block NSFW Content
              <input type="checkbox" id="nsfw-allow" name="nsfw-allow" value="yes">
              <span class="checkmark"></span>
            </label><br>

          </div>

        </div>
        <div class="modal-footer">
          <button type="button" id="modal-cancel" class="modal-hide-button action-button">Cancel</button>
          <button type="button" id="modal-accept" class="action-button">Save</button>
        </div>
      </div>
    </div>
  </div>

</main>
