{{#section "head"}}
  <!-- Common html head stuff -->
  {{> common-html-head}}

  <!-- Import signup script file -->
  <script src="/scripts/authentication/signup.js"></script>
{{/section}}

{{> header }}

<main class="content">

  <div class="main-form-container" id="login-form-container">
    <h1>Sign Up Form</h1>
      <p>
        <label for="username">Username: </label>
        <input type="text" id="username" name="username" autofocus="true" placeholder="username" />
      </p>
      <p>
        <label for="token">Password: </label>
        <input type="text" id="token" name="password" placeholder="password" />
      </p>
      <p class="button-p">
        <button id="connect" onclick="submitSignupForm()">
          Submit
        </button>
        <button id="cancel" onclick="redirectToLogin()">
          Cancel
        </button>
      </p>
  </div>

  {{> init-message-modal }}

</main>
